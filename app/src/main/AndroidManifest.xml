<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="festusyuma.com.glaiddriver">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeIntroScreen">
        <activity android:name=".controller.OrderDetailsActivity"></activity>
        <activity android:name=".controller.OrderHistoryActivity" />
        <activity android:name=".controller.SupportFullPageActivity" />
        <activity android:name=".controller.HelpSupportActivity" />
        <activity android:name=".controller.EditProfileActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--
             The API key for Google Maps-based APIs is defined as a string resource.
             (See the file "res/values/google_maps_api.xml").
             Note that the API key is linked to the encryption key used to sign the APK.
             You need a different API key for each encryption key, including the release key that is used to
             sign the APK for publishing.
             You can define the keys for the debug and release targets in src/debug/ and src/release/.
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".controller.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".controller.ResetPasswordActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.ProblemsLoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.RecoveryActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.ForgotPasswordActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.SignupOtpActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.SignUpActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:windowSoftInputMode="adjustPan|stateHidden"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".controller.GetStartedActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            tools:ignore="LockedOrientationActivity" /> <!-- The below is for the splash screen and we need no action bar and the default theme -->
        <activity
            android:name=".controller.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppThemeIntroScreen"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>

                <!-- MAIN represents that it is the Main Activity -->
                <action android:name="android.intent.action.MAIN" />
                <!-- Launcher Denotes that it will be the first launching activity -->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.CarouselActivity"
            android:configChanges="orientation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme"
            tools:ignore="LockedOrientationActivity" />
    </application>

</manifest>