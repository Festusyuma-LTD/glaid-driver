<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/senderImg"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginStart="15dp"
        
        app:layout_constraintBottom_toBottomOf="@+id/sender_chatbox"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/forgot_password" />

    <TextView
        android:id="@+id/sender_chatbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        
        android:layout_marginBottom="5dp"
        android:background="@drawable/ic_sennder_chatbox"
        android:gravity="bottom|start"
        android:maxEms="18"
        android:padding="12dp"
        android:textColor="#062743"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/senderImg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/senderTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:alpha="0.4"
        android:gravity="center|start"
        tools:text="12:45"
        android:textColor="#062743"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sender_chatbox"
        app:layout_constraintTop_toBottomOf="@+id/sender_chatbox" />

</androidx.constraintlayout.widget.ConstraintLayout>