<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".controller.GetStartedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/driver_bg_gradient"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="122dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:text="Already have an account?"
            android:textColor="#808080"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/getStartedSignInBtn"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <TextView
            android:id="@+id/getStartedSignInBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:onClick="getStartedSignInBtnClick"
            android:text="Sign in"
            android:textColor="#4E007C"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView2" />

        <TextView
            android:id="@+id/termOfUseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="termOfUseClick"
            android:text="Terms of Use"
            android:textColor="#4E007C"
            android:textSize="14sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="@+id/emailSignUpBtn"
            app:layout_constraintStart_toEndOf="@+id/textView7" />

        <TextView
            android:id="@+id/orText"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#808080"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView13"
            app:layout_constraintStart_toStartOf="@+id/googleSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/imageView13" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_glaidline"
            app:layout_constraintEnd_toEndOf="@+id/googleSignUpBtn"
            app:layout_constraintStart_toEndOf="@+id/orText"
            app:layout_constraintTop_toBottomOf="@+id/googleSignUpBtn" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:elevation="2dp"
            android:text="Sign up with Facebook"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/fbSignUpBtn"
            app:layout_constraintStart_toStartOf="@+id/fbSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/fbSignUpBtn" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:elevation="1dp"
            android:text="Sign up with Google"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/googleSignUpBtn"
            app:layout_constraintStart_toStartOf="@+id/googleSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/googleSignUpBtn" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:elevation="1dp"
            android:text="Sign up with Email"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/emailSignUpBtn"
            app:layout_constraintStart_toStartOf="@+id/emailSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/emailSignUpBtn" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/fbSignUpBtn"
            app:layout_constraintEnd_toEndOf="@+id/fbSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/fbSignUpBtn"
            app:srcCompat="@drawable/facebookicon" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/googleSignUpBtn"
            app:layout_constraintEnd_toEndOf="@+id/googleSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/googleSignUpBtn"
            app:srcCompat="@drawable/ic_googleicon" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:elevation="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/emailSignUpBtn"
            app:layout_constraintEnd_toEndOf="@+id/emailSignUpBtn"
            app:layout_constraintTop_toTopOf="@+id/emailSignUpBtn"
            app:srcCompat="@drawable/ic_emailicon" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="By signing up you agree to our "
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/termOfUseId"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="@+id/emailSignUpBtn"
            app:layout_constraintTop_toBottomOf="@+id/emailSignUpBtn"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/fbSignUpBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_fbbtnbanner"
            android:onClick="fbSignUpBtnClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <Button
            android:id="@+id/googleSignUpBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_googlebtnbanner"
            android:onClick="googleSignUpBtnClick"
            app:layout_constraintEnd_toEndOf="@+id/fbSignUpBtn"
            app:layout_constraintStart_toStartOf="@+id/fbSignUpBtn"
            app:layout_constraintTop_toBottomOf="@+id/fbSignUpBtn" />

        <Button
            android:id="@+id/emailSignUpBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_glaidbtnbanner"
            android:onClick="emailSignUpBtnClick"
            app:layout_constraintEnd_toEndOf="@+id/googleSignUpBtn"
            app:layout_constraintStart_toStartOf="@+id/googleSignUpBtn"
            app:layout_constraintTop_toBottomOf="@+id/imageView13" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="2dp"
            android:text="Driver"
            android:textAllCaps="false"
            android:textColor="#FC7400"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView8"
            app:layout_constraintStart_toStartOf="@+id/imageView8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>