<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".controller.OrderInvoiceActivity">
    <TextView
        android:id="@+id/invite_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="@string/order_invoice"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/defaultBackBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        
        android:onClick="backClick"
        app:layout_constraintBottom_toBottomOf="@+id/invite_tab"
        app:layout_constraintEnd_toStartOf="@+id/invite_tab"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/invite_tab" />

    <ImageView
        android:id="@+id/btnImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:onClick="backClick"
        app:layout_constraintBottom_toBottomOf="@+id/defaultBackBtn"
        app:layout_constraintEnd_toEndOf="@+id/defaultBackBtn"
        app:layout_constraintStart_toStartOf="@+id/defaultBackBtn"
        app:layout_constraintTop_toTopOf="@+id/defaultBackBtn"
        app:srcCompat="@drawable/h_back_btn" />


    <Button
        android:id="@+id/downloadBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        
        android:onClick="downloadClick"
        app:layout_constraintBottom_toBottomOf="@+id/invite_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/invite_tab"
        app:layout_constraintTop_toTopOf="@+id/invite_tab" />

    <ImageView
        android:id="@+id/downloadImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:onClick="downloadClick"
        app:layout_constraintBottom_toBottomOf="@+id/downloadBtn"
        app:layout_constraintEnd_toEndOf="@+id/downloadBtn"
        app:layout_constraintStart_toStartOf="@+id/downloadBtn"
        app:layout_constraintTop_toTopOf="@+id/downloadBtn"
        app:srcCompat="@drawable/ic_download_btn" />

    <ScrollView
        android:id="@+id/orderInvScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invite_tab"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#f6f6f6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/paymentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:background="@color/colorPrimaryDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top">


                <TextView
                    android:id="@+id/paymentStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/awaiting_payment"
                    android:textColor="#9B72B3"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/paymentCard"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"/>

                <TextView
                    android:id="@+id/paymentAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/fee_is"
                    android:textColor="#EDE5F2"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/paymentStatusText"
                    app:layout_constraintTop_toBottomOf="@+id/paymentStatusText" />

                <TextView
                    android:id="@+id/paymentTypeLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/payment_type"
                    android:textColor="#9B72B3"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/paymentAmount"
                    app:layout_constraintTop_toBottomOf="@+id/paymentAmount"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/paymentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/card"
                    android:textColor="#EDE5F2"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@+id/paymentTypeLabel"
                    app:layout_constraintTop_toBottomOf="@+id/paymentTypeLabel"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:lineHeight="14sp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/top2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#f6f6f6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/paymentCard" />

            <ImageView
                android:id="@+id/glaidLogo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="H, 1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top2"
                app:srcCompat="@drawable/ic_glaid_order_inv"
                android:contentDescription="@string/app_logo" />

            <View
                android:id="@+id/divider8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/ic_glaidline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/glaidLogo" />

            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="@string/order_number"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/divider10"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider8" />

            <TextView
                android:id="@+id/orderTimeAndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                tools:text="@string/_12_30_am_3_3_2020"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/divider10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider8" />

            <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_glaidline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/orderNumber" />

            <View
                android:id="@+id/imageView25"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="@id/priceLabel"
                app:layout_constraintStart_toStartOf="@+id/gasTypeLabel"
                app:layout_constraintTop_toTopOf="@+id/gasTypeLabel"
                app:layout_constraintBottom_toBottomOf="@+id/gasTypeLabel"
                android:background="@drawable/invoice_header"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/gasTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/item"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider10"/>

            <TextView
                android:id="@+id/quantityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/quantity"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@+id/gasTypeLabel"
                app:layout_constraintBottom_toBottomOf="@+id/gasTypeLabel"
                app:layout_constraintStart_toEndOf="@+id/gasTypeLabel"
                app:layout_constraintEnd_toStartOf="@+id/priceLabel"/>

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/price"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintTop_toTopOf="@+id/quantityLabel"
                app:layout_constraintBottom_toBottomOf="@+id/quantityLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/gasType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center|start"
                android:text="@string/diesel"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/gasTypeLabel"
                app:layout_constraintTop_toBottomOf="@+id/gasTypeLabel" />

            <TextView
                android:id="@+id/itemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|start"
                android:text="@string/_10_liters"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/quantityLabel"
                app:layout_constraintTop_toBottomOf="@+id/quantityLabel"
                app:layout_constraintTop_toTopOf="@+id/gasType"
                app:layout_constraintBottom_toBottomOf="@+id/gasType"/>

            <TextView
                android:id="@+id/orderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center|start"
                android:text="@string/_8000"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/priceLabel"
                app:layout_constraintTop_toBottomOf="@+id/priceLabel"
                app:layout_constraintTop_toTopOf="@+id/itemQuantity"
                app:layout_constraintBottom_toBottomOf="@+id/itemQuantity" />

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_glaidline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView25" />

            <View
                android:id="@+id/divider12"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_glaidline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider11" />

            <TextView
                android:id="@+id/textView38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                
                android:layout_marginBottom="10dp"
                android:text="@string/subtotal"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/introMessage"
                app:layout_constraintStart_toStartOf="@+id/divider11"
                app:layout_constraintTop_toBottomOf="@+id/divider11"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/introMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/delivery"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/textView40"
                app:layout_constraintStart_toStartOf="@+id/textView38"
                app:layout_constraintTop_toBottomOf="@+id/textView38" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tax"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/divider12"
                app:layout_constraintStart_toStartOf="@+id/introMessage"
                app:layout_constraintTop_toBottomOf="@+id/introMessage" />

            <TextView
                android:id="@+id/subTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                
                android:text="@string/_8000"
                android:textColor="#333333"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/deliveryCost"
                app:layout_constraintEnd_toEndOf="@+id/divider11"
                app:layout_constraintTop_toBottomOf="@+id/divider11" />

            <TextView
                android:id="@+id/deliveryCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_500"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/taxCost"
                app:layout_constraintStart_toStartOf="@+id/subTotal"
                app:layout_constraintTop_toBottomOf="@+id/subTotal" />

            <TextView
                android:id="@+id/taxCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_500"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/divider12"
                app:layout_constraintStart_toStartOf="@+id/deliveryCost"
                app:layout_constraintTop_toBottomOf="@+id/deliveryCost" />

            <View
                android:id="@+id/divider13"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_glaidline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider12" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                
                android:text="@string/total_outstanding"
                android:textColor="#333333"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/divider13"
                app:layout_constraintStart_toStartOf="@+id/divider12"
                app:layout_constraintTop_toBottomOf="@+id/divider12"
                app:lineHeight="21sp" />

            <TextView
                android:id="@+id/totalCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                
                android:text="@string/_9000"
                android:textColor="#333333"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView44"
                app:layout_constraintEnd_toEndOf="@+id/divider12"
                app:lineHeight="21sp" />

            <View
                android:id="@+id/divider14"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_glaidline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider13" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="@string/billed_to"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider14"
                app:lineHeight="14sp" />

            <TextView
                android:id="@+id/billedTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                
                android:text="@string/chidozie_henry"
                android:textColor="#808080"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView46"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>